# ==========================================
# LLM (Large Language Model) Settings
# Primary model for reasoning and generation
# ==========================================
# LLM Provider Configuration
# Options: ollama, azure_openai, openai
LLM_PROVIDER=ollama

# --- Ollama Settings ---
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=gpt-oss:20b

# --- Azure OpenAI Settings ---
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key
AZURE_OPENAI_MODEL_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# --- Generic OpenAI Settings ---
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo

# ==========================================
# Embedding Settings
# Used for RAG, Semantic Search, Memory
# ==========================================
# Options: ollama, azure_openai, openai
EMBEDDING_PROVIDER=ollama

OLLAMA_EMBEDDING_HOST=http://host.docker.internal:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest

AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-small
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==========================================
# Search Engine API Keys
# ==========================================
# Google Custom Search (Required for real-time internet access)
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_cse_id_here

# Brave Search (Optional fallback)
BRAVE_SEARCH_API_KEY=your_brave_api_key_here

# ==========================================
# System Settings
# ==========================================
LOG_LEVEL=INFO
MAX_ROUNDS=3
MAX_MEMBERS_PER_TEAM=5
DEFAULT_LANGUAGE=zh-TW

# TEJ (Taiwan Economic Journal) API Key
# Required for Taiwan financial data tools
TEJ_API_KEY=your_tej_api_key_here

# ==========================================
# Infrastructure Settings
# ==========================================
# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# Semantic Cache Settings
# ==========================================
# Cache TTL in seconds (86400 = 24h)
SEMANTIC_CACHE_TTL=86400

# ==========================================
# Debug Settings
# ==========================================
# Enable detailed round-by-round debug logs (default: false)
DEBUG_LOG_ENABLE=true

# ==========================================
# Feature Flags
# ==========================================
# ChinaTimes Tools Feature Flag (Internal Use Only)
ENABLE_CHINATIMES_TOOLS=false